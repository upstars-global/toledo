{
    "compilerOptions": {
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "outDir": "js",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck" : true
    },
    "include": [
        "./**/*"
    ]
}
