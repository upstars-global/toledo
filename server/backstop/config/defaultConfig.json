{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "desktop",
      "width": 1440,
      "height": 900
    },
    {
      "label": "mobile",
      "width": 360,
      "height": 800
    }
  ],
  "openReport": false,
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [],
  "report": ["CI"],
  "engine": "puppeteer",
  "engineOptions": {
    "executablePath": "/usr/bin/chromium-browser",
    "args": ["--no-sandbox", "--disable-animations", "--disable-setuid-sandbox", "--disable-dev-shm-usage"],
    "headless": true
  },
  "asyncCaptureLimit": 4,
  "asyncCompareLimit": 2,
  "debug": false,
  "debugWindow": false
}
